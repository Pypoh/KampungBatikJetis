<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_pengelola"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile_pengelola"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="24dp"
                android:src="@color/grey"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/text_nama_pengelola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="nama_orang"
                android:layout_marginLeft="24dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/image_profile_pengelola"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_jabatan_pengelola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ketua RT"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="24dp"
                app:layout_constraintLeft_toRightOf="@id/image_profile_pengelola"
                app:layout_constraintTop_toBottomOf="@id/text_nama_pengelola" />

            <TextView
                android:id="@+id/text_nomor_pengelola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+62 XXXX"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/image_profile_pengelola"
                app:layout_constraintTop_toBottomOf="@id/text_jabatan_pengelola" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>